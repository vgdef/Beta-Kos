<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/rubikmedium"
        android:text="BETA KOS"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp">

    <Button
        android:id="@+id/btnNusaniwe"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="112dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="300dp"
        android:background="@mipmap/nusaniwe" />

    <Button
        android:id="@+id/btnSirimau"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="108dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="300dp"
        android:background="@mipmap/sirimau" />

    <Button
        android:id="@+id/btnBaguala"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="249dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="520dp"
        android:background="@mipmap/baguala" />

    <Button
        android:id="@+id/btnTelukambon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/btnSirimau"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="141dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="520dp"
        android:background="@mipmap/teluk" />

    <Button
        android:id="@+id/btnLeitimur"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="50dp"
        android:background="@mipmap/leitimur" />

</RelativeLayout>
</LinearLayout>